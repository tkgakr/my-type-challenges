{
  "name": "Type Challenges - TypeScript",
  
  // 最新ではなくオリジナル環境を考慮した Node.js バージョンのイメージを使用する
  "image": "mcr.microsoft.com/devcontainers/typescript-node:20",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {
      "version": "latest"
    }
  },
  
  "customizations": {
    "vscode": {
      "settings": {
        // original-type-challenges/.vscode/settings.json に準拠
        "github.copilot.enable": {
          "typescript": false
        },
        "search.exclude": {
          "**/node_modules": true,
          "**/bower_components": true,
          "**/*.code-search": true,
          "pnpm-lock.yaml": true,
          "**/dist": true
        },
        "typescript.tsdk": "node_modules/typescript/lib",
        "prettier.semi": false,
        "typescript.format.semicolons": "remove",
        "javascript.format.semicolons": "remove",
        "eslint.useFlatConfig": true,
        "prettier.enable": false,
        "editor.formatOnSave": false,
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit",
          "source.organizeImports": "never"
        },
        "eslint.rules.customizations": [
          { "rule": "style/*", "severity": "off" },
          { "rule": "format/*", "severity": "off" },
          { "rule": "*-indent", "severity": "off" },
          { "rule": "*-spacing", "severity": "off" },
          { "rule": "*-spaces", "severity": "off" },
          { "rule": "*-order", "severity": "off" },
          { "rule": "*-dangle", "severity": "off" },
          { "rule": "*-newline", "severity": "off" },
          { "rule": "*quotes", "severity": "off" },
          { "rule": "*semi", "severity": "off" }
        ],
        "eslint.validate": [
          "javascript",
          "javascriptreact",
          "typescript",
          "typescriptreact",
          "vue",
          "html",
          "markdown",
          "json",
          "jsonc",
          "yaml",
          "toml"
        ]
      }
    }
  },
  
  // SSH設定のマウント（macOS固有設定を考慮）
  "mounts": [
    "source=${localEnv:HOME}/.ssh,target=/home/node/.ssh,type=bind,readonly",
    "source=${localEnv:HOME}/.gitconfig,target=/home/node/.gitconfig-host,type=bind,readonly"
  ],
  
  "postCreateCommand": "bash .devcontainer/post-create.sh",
  
  "remoteEnv": {
    "GIT_EDITOR": "code --wait"
  },
  
  "remoteUser": "node",
  
  // リモート接続終了時にコンテナを自動削除する設定
  "shutdownAction": "stopContainer"
}
